<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.seven.user.dao.UserInfoMapper">

    <select id="selectByPrimaryKey" resultType="com.seven.user.entity.UserInfo">
        select
             id
            ,mobile
            ,password
            ,nickname
            ,gender
            ,birthday
            ,email
            ,avatar
            ,intro
            ,reg_dt
            ,upd_dt
            ,last_dt
        from sf_user_info
        where id = #{id}
    </select>

    <insert id="insertUserInfo" parameterType="com.seven.user.entity.UserInfo">
    insert into sf_user_info (
         id
        ,mobile
        ,password
        ,nickname
        ,gender
        ,birthday
        ,email
        ,avatar
        ,intro
        ,reg_dt
        ,upd_dt
        ,last_dt
      )
    values (
         #{id}
        ,#{mobile}
        ,#{password}
        ,#{nickname}
        ,#{gender}
        ,#{birthday}
        ,#{email}
        ,#{avatar}
        ,#{intro}
        ,#{reg_dt}
        ,#{upd_dt}
        ,SYSDATE()
      )
  </insert>

</mapper>